@model Parcial1.Models.Form
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Esta seguro de elimanar el formulario?</h3>

<div class="row">
        <div class="col-sm-5">

            <form asp-action="Eliminar" asp-controller="Home" method="post">
                <input type="hidden" asp-for="IdForm" />

                <div class="mb-3">
                    <label class="form-label" asp-for="IdCategoria">Categoria</label>
                    <input class="form-control form-control-sm" asp-for="oCategorium.TiposCategoria" type="text" disabled/>
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="Cuit">Cuit</label>
                    <input class="form-control form-control-sm" asp-for="Cuit" type="text" disabled/>
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="RazonSocial">Razon Social</label>
                    <input class="form-control form-control-sm" asp-for="RazonSocial" type="text" disabled/>
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="Domicilio">Domicilio</label>
                    <input class="form-control form-control-sm" asp-for="Domicilio" type="text" disabled/>
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input class="form-control form-control-sm" asp-for="Email" type="text" disabled/>
                </div>

                <div class="mb-2">
                    <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                    <a class="btn btn-dark btn-sm" asp-action="index" asp-controller="Home">Volver</a>
                </div>
            </form>
        </div>
    </div>

