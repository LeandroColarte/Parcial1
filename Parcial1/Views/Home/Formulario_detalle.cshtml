@model Parcial1.Models.ViewModels.FormularioVM

@{
    ViewData["Title"] = "Formulario_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oForm.IdForm == 0)
{
    <h1>Crear Formulario</h1>

}
else {
                <h1>Editar Formulario</h1>
    }

    <div class="row">
        <div class="col-sm-5">

            <form asp-action="Formulario_Detalle" asp-controller="Home" method="post">
                <input type="hidden" asp-for="oForm.IdForm" />

                <div class="mb-3">
                    <label class="form-label" asp-for="oForm.IdCategoria">Categoria</label>
                    <select class="form-select form-select-sm" asp-for="oForm.IdCategoria" asp-items="@Model.oListCategorium">
                        <option selected disabled>--SELECCIONAR--</option>
                    </select>
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="oForm.Cuit">Cuit</label>
                    <input class="form-control form-control-sm" asp-for="oForm.Cuit" type="int" />
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="oForm.RazonSocial">Razon Social</label>
                    <input class="form-control form-control-sm" asp-for="oForm.RazonSocial" type="int" />
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="oForm.Domicilio">Domicilio</label>
                    <input class="form-control form-control-sm" asp-for="oForm.Domicilio" type="int" />
                </div>
                <div class="mb-2">
                    <label class="form-label" asp-for="oForm.Email">Email</label>
                    <input class="form-control form-control-sm" asp-for="oForm.Email" type="int" />
                </div>
                
                <div class="mb-2">
                    @if (Model.oForm.IdForm == 0)
                    {
                        <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>

                    }
                    else{
                            <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                    }
                    <a class="btn btn-dark btn-sm" asp-action="index" asp-controller="Home">Volver</a>
                </div>
            </form>
        </div>
    </div>
    